<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.birjuvachhani.customadapterforlistview.DetailedActivity">

    <com.birjuvachhani.customadapterforlistview.SquareImageView
        android:id="@id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img2"
        android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/iv_img"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_label_title"
                    android:textSize="32sp" />

                <TextView
                    android:id="@+id/tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sample_label_desc"
                    android:textSize="16sp" />

            </LinearLayout>

</RelativeLayout>
